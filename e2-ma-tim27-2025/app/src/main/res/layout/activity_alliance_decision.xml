<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewDecisionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decision_info"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/buttonConfirmJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm_join"/>

    <Button
        android:id="@+id/buttonCancelJoin"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/button_cancel_join"/>

    <ProgressBar
        android:id="@+id/progressBarDecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

</LinearLayout>