<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="8dp"
    android:gravity="center_vertical">
    
    <ImageView
        android:id="@+id/imageViewEquipment"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_potion" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEquipmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="Potion of Minor Power" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            tools:text="Active for 2 more battles"
            tools:textColor="#4CAF50"/>

        <TextView
            android:id="@+id/textViewEquipmentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Temporarily increases Power Points (PP) by 20% for the next boss battle." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/buttonActivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate" />


        <Button
            android:id="@+id/buttonUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textUpgradeCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Cost: 144 coins" />
    </LinearLayout>

</LinearLayout>