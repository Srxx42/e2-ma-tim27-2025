<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_hell">


    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/alliance_boss_ui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/includeToolbar">

        <ProgressBar
            android:id="@+id/alliance_boss_hp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/red_progress_bar"
            tools:progress="80" />

        <TextView
            android:id="@+id/tv_alliance_boss_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/alliance_boss_hp_bar"
            android:layout_alignBottom="@id/alliance_boss_hp_bar"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="400/500" />

        <LinearLayout
            android:id="@+id/ll_countdown_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alliance_boss_hp_bar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days left: "
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="12"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_alliance_boss"
            android:layout_width="270dp"
            android:layout_height="420dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            tools:src="@drawable/alliance_boss_100" />

        <Button
            android:id="@+id/btn_show_progress"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/iv_alliance_boss"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="Show progress"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/alliance_no_mission_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_mission_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="34sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            tools:text="YOU FAILED SUPER MISSION"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="(Only leader can start special mission)"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <Button
            android:id="@+id/btn_start_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start mission"
            android:textSize="12dp"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/design_default_color_primary_dark"/>

    </LinearLayout>

    <!-- =================================================================== -->
    <!--          EKRAN ZA NAGRADE NAKON POBEDE BOSSA (OVERLAY)           -->
    <!-- =================================================================== -->


    <RelativeLayout
        android:id="@+id/reward_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000"
        android:visibility="gone"
        tools:visibility="gone">

        <!-- GIF kovčega -->
        <ImageView
            android:id="@+id/iv_alliance_chest_gif"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:src="@drawable/chest_closed" />

        <!-- Kontejner za prikaz nagrada (inicijalno nevidljiv) -->
        <LinearLayout
            android:id="@+id/ll_alliance_rewards_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_alliance_chest_gif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="You received:"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Prikaz zlata -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reward_gold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="250" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/gold_coins" />


            </LinearLayout>

            <!-- Kontejner za iteme (dinamički se popunjava) -->
            <LinearLayout
                android:id="@+id/ll_reward_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_reward_item1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_bow" />

                <ImageView
                    android:id="@+id/iv_reward_item2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_bow" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>