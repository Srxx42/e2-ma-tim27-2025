<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boss_battle_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.BossBattleActivity">

    <!-- Pozadinska slika koja se menja -->
    <ImageView
        android:id="@+id/boss_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/goblin_forest" />

    <!-- Toolbar na vrhu -->
    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar" />

    <!-- Kontejner za sve UI elemente borbe -->
    <RelativeLayout
        android:id="@+id/battle_ui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/includeToolbar">

    <!-- Health Bar Bossa (crveni) -->
    <ProgressBar
        android:id="@+id/boss_hp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:progressDrawable="@drawable/red_progress_bar"
        tools:progress="80" />

    <TextView
        android:id="@+id/tv_boss_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/boss_hp_bar"
        android:layout_alignBottom="@id/boss_hp_bar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="400/500" />

    <!-- PP Bar Korisnika (plavi) -->
    <View
        android:id="@+id/view_pp_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/boss_hp_bar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_bar_background" />

    <TextView
        android:id="@+id/tv_user_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_pp_bar"
        android:layout_alignBottom="@id/view_pp_bar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="80 PP" />


    <!-- Moguće nagrade -->
    <TextView
        android:id="@+id/tv_possible_rewards_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pp_bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Possible rewards:"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textStyle="bold" />

    <!-- Ovde će se dinamički dodavati ikonice za nagrade -->
    <LinearLayout
        android:id="@+id/ll_possible_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_possible_rewards_label"
        android:layout_alignStart="@id/tv_possible_rewards_label"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <!-- Primer ikonica, implementirati logiku za prikaz -->
    </LinearLayout>

    <!-- Nagrada u zlatu -->
    <LinearLayout
        android:id="@+id/ll_gold_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pp_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gold_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFD700"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            tools:text="250" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/gold_coins" />
    </LinearLayout>

    <!-- Slika Bossa -->
    <ImageView
        android:id="@+id/iv_boss"
        android:layout_width="270dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        tools:src="@drawable/goblin_attack_nb" />

    <!-- Dugme za napad -->
    <ImageButton
        android:id="@+id/btn_attack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="90dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/attack_button" />

    <!-- Kontejner za donji deo UI-a -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:padding="16dp">

        <!-- Mačevi koji predstavljaju broj napada -->
        <LinearLayout
            android:id="@+id/ll_swords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sword1"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/short_sword" />
            <ImageView
                android:id="@+id/iv_sword2"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/short_sword" />
            <ImageView
                android:id="@+id/iv_sword3"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/short_sword" />
            <ImageView
                android:id="@+id/iv_sword4"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/short_sword" />
            <ImageView
                android:id="@+id/iv_sword5"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/short_sword" />
        </LinearLayout>

        <!-- Current items i procenat -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ll_swords"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_current_items_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current items:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Ovde će se dinamički dodavati ikonice za iteme -->
            <LinearLayout
                android:id="@+id/ll_current_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_attack_chance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="63%" />

    </RelativeLayout>

</RelativeLayout>

<LinearLayout
android:id="@+id/ll_boss_beaten_message"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:gravity="center"
android:orientation="vertical"
android:visibility="gone"
tools:visibility="visible">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="BOSS IS BEATEN"
    android:textColor="@android:color/holo_green_dark"
    android:textSize="34sp"
    android:textStyle="bold"
    android:shadowColor="@android:color/black"
    android:shadowDx="2"
    android:shadowDy="2"
    android:shadowRadius="3"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="(level up to encounter next one)"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:shadowColor="@android:color/black"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="2"/>

</LinearLayout>

    <LinearLayout
        android:id="@+id/lost_boss_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU LOST !"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="34sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="(Level up for another chance)"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </LinearLayout>

    <!-- =================================================================== -->
    <!--          EKRAN ZA NAGRADE NAKON POBEDE BOSSA (OVERLAY)           -->
    <!-- =================================================================== -->
    <RelativeLayout
        android:id="@+id/reward_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- GIF kovčega -->
        <ImageView
            android:id="@+id/iv_chest_gif"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:src="@drawable/chest_closed" />

        <!-- Kontejner za prikaz nagrada (inicijalno nevidljiv) -->
        <LinearLayout
            android:id="@+id/ll_rewards_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_chest_gif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You received:"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <!-- Prikaz zlata -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reward_gold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="250" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/gold_coins" />
            </LinearLayout>

            <!-- Kontejner za iteme (dinamički se popunjava) -->
            <LinearLayout
                android:id="@+id/ll_reward_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <!-- Ovde će se dinamički dodavati ikonice za iteme -->
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    </RelativeLayout>
