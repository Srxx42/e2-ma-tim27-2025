<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/avatar_1"/>

    <LinearLayout
        android:id="@+id/layoutUserInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rookie"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_user_badges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bedge1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:visibility="visible"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="visible"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="visible"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="visible"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="visible"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="gone"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="gone"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="gone"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="gone"
            android:src="@drawable/badge_gold" />

        <ImageView
            android:id="@+id/iv_bedge10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:visibility="gone"
            android:src="@drawable/badge_gold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Level: 15"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/imageViewAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_friend"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>

</LinearLayout>