<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stones">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSingleShow"
        android:layout_width="55pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Single"
        android:textColor="#F0BC54"
        android:textStyle="bold"
        android:backgroundTint="#46875a"
        app:layout_constraintEnd_toStartOf="@+id/btnRepeatingShow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeToolbar" />

    <Button
        android:id="@+id/btnRepeatingShow"
        android:layout_width="55pt"
        android:layout_height="wrap_content"
        android:text="Repeating"
        android:textColor="#F0BC54"
        android:textStyle="bold"
        android:backgroundTint="#46875a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSingleShow"
        app:layout_constraintTop_toTopOf="@id/btnSingleShow" />


    <ListView
        android:id="@+id/singleTaskListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:visibility="gone"
        tools:layout_editor_absoluteY="1dp"
        tools:listitem="@layout/item_task"
        android:divider="@android:color/black"
        android:dividerHeight="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnRepeatingShow">
    </ListView>

    <ListView
        android:id="@+id/repeatingTaskListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:visibility="visible"
        tools:layout_editor_absoluteY="1dp"
        tools:listitem="@layout/item_task"
        android:divider="@android:color/black"
        android:dividerHeight="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnRepeatingShow">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>